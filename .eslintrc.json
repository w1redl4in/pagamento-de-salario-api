{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "eslint-plugin-import-helpers"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never"
        }
     ],
      "import/prefer-default-export": "off",
      "global-require": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-var-requires": "off",
      "class-methods-use-this": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {
                "directory": "./tsconfig.json"
            },
            "node": {
                "paths": [
                    "src"
                ],
                "extensions": [
                    ".ts"
                ]
            }
        }
    }
}
